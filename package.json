{
  "name": "nuxt-template",
  "version": "1.0.0",
  "description": "A comprehensive template for nuxt-based projects.",
  "author": "Julien Sulpis",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "generate:gh-pages": "cross-env DEPLOY_ENV=GH_PAGES nuxt generate",
    "unit": "jest --config test/unit/jest.conf.js",
    "e2e": "node test/e2e/runner.js",
    "test": "npm run unit && npm run e2e",
    "test:coverage": "jest --config test/unit/jest.conf.js && cat test/unit/coverage/lcov.info | codacy-coverage",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.vue,.ts --ignore-path .gitignore ."
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "^2.0.2",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "chromedriver": "^2.43.1",
    "codacy-coverage": "^3.2.0",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "nightwatch": "^0.9.21",
    "node-sass": "^4.9.4",
    "nuxt-typescript": "^0.11.0",
    "prettier": "^1.14.3",
    "sass-loader": "^7.1.0",
    "selenium-server": "^3.14.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "^20.0.0",
    "vue-jest": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
